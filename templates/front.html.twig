{% extends 'base.html.twig' %}

{% trans_default_domain 'front' %}

{% block body %}
    {% if is_granted('IS_IMPERSONATOR') %}
        <div class="sticky-top inset-x-0 top-0 z-30">
            <div class="flex items-center gap-x-6 bg-indigo-600 px-6 py-2.5 sm:px-3.5 sm:before:flex-1">
                <p class="text-sm/6 text-white">
                    <strong class="font-semibold">{{ 'title.impersonation'|trans }}</strong>
                    <svg viewBox="0 0 2 2" aria-hidden="true" class="mx-2 inline size-0.5 fill-current"><circle r="1" cx="1" cy="1" /></svg>
                    {{ 'text.impersonation'|trans({'%identifier%': app.user.userIdentifier}) }}
                    <span aria-hidden="true">&rarr;</span>
                    <a href="{{ impersonation_exit_path(path('admin')) }}">{{ 'link.exit_impersonation'|trans }}</a>
                </p>
                <div class="flex flex-1 justify-end">
                    <a href="{{ impersonation_exit_path(path('admin')) }}" class="-m-3 p-3 focus-visible:-outline-offset-4">
                        <span class="sr-only">{{ 'link.exit_impersonation'|trans }}</span>
                        <svg viewBox="0 0 20 20" fill="currentColor" data-slot="icon" aria-hidden="true" class="size-5 text-white">
                            <path d="M6.28 5.22a.75.75 0 0 0-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 1 0 1.06 1.06L10 11.06l3.72 3.72a.75.75 0 1 0 1.06-1.06L11.06 10l3.72-3.72a.75.75 0 0 0-1.06-1.06L10 8.94 6.28 5.22Z" />
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    {% endif %}

    <header class="navbar bg-base-100 mx-auto px-4 lg:px-8 xl:max-w-7xl">
        <div class="navbar-start">
            <div class="dropdown">
                <div tabindex="0" role="button" class="btn btn-ghost lg:hidden">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"> <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h8m-8 6h16" /> </svg>
                </div>
                <ul
                    tabindex="0"
                    class="menu menu-sm dropdown-content bg-base-100 rounded-box z-1 mt-3 w-52 p-2 shadow">
                    {{ include('_main_menu.html.twig') }}
                </ul>
            </div>
            <a
                href="{{ path('homepage') }}"
                class="btn btn-ghost text-xl"
            >
                {% if app_icon_filepath %}
                    <img class="h-10 w-auto" src="{{ asset(app_icon_filepath) }}" alt="{{ app_name }}">
                {% endif %}
                <span>{{ app_name }}</span>
            </a>
        </div>
        <div class="navbar-center hidden lg:flex">
            <ul class="menu menu-horizontal px-1">
                {{ include('_main_menu.html.twig') }}
            </ul>
        </div>
        <div class="navbar-end">
            {% if is_granted('ROLE_ADMIN') %}
                <a
                    href="{{ path('admin') }}"
                    class="link link-hover"
                >
                    <span>{{ 'link.admin'|trans }}</span>
                </a>
            {% endif %}

            {% if app.user %}
                <a
                    href="{{ path('_logout_main') }}"
                    class="link link-hover mx-2"
                    data-turbo="false"
                >
                    <span>{{ 'link.logout'|trans }}</span>
                </a>
            {% else %}
                <a
                    href="{{ path('request_login_link') }}"
                    class="btn-sm btn-ghost"
                >
                    <span>{{ 'link.login'|trans }}</span>
                </a>
            {% endif %}

            {% if feature_enabled('theme_chooser') %}
                {{ include('_choose_theme.html.twig') }}
            {% endif %}
        </div>
    </header>

    <div class="container sm:mx-auto py-8 md:py-12 xl:max-w-7xl">
        {% block main %}{% endblock %}
    </div>
{% endblock %}

{% block footer %}
    {{ include('_simple_footer.html.twig') }}
    {# You can also use _footer.html.twig that it's more complex and customize it #}
{% endblock %}
