{% trans_default_domain 'front' %}

<footer class="bg-base-200 text-base-content p-10">
    <div class="footer mx-auto px-4 lg:px-8 xl:max-w-7xl sm:footer-horizontal">
        <aside>
            <a
                href="{{ path('homepage') }}"
                class="group inline-flex items-center font-bold gap-2 text-xl tracking-wide"
            >
                {% if app_icon_filepath %}
                    <img class="h-10 w-auto" src="{{ asset(app_icon_filepath) }}" alt="{{ app_name }}">
                {% endif %}
                <span>{{ app_name }}</span>
            </a>

            <p>
                &copy; 2025 {{ app_name }}<br>
            </p>

            <a href="{{ path('page_show', {slug: 'privacy-policy'}) }}">
                {{ 'link.privacy_policy'|trans }}
            </a>

            {% if app.user %}
                <br><small>
                    {{ 'You are logged in as'|trans }} <strong>{{ app.user.userIdentifier }}</strong>.<br>
                    <a href="{{ path('_logout_main') }}" class="link" data-turbo="false">{{ 'link.logout'|trans }}</a>
                </small>
            {% endif %}
        </aside>
    </div>
</footer>
