{% trans_default_domain 'homepage' %}

<div
    class="hero min-h-100"
    style="background-image: url({{ asset('build/images/hero.jpg') }});"
>
    <div class="hero-overlay"></div>
    <div class="hero-content text-neutral-content text-center">
        <div class="max-w-xl">
            <h1 class="mb-5 text-5xl font-bold">{{ 'Go fast!'|trans }}</h1>
            <p class="mb-5 text-xl">
                {{ 'Pragmatic boilerplate and starter-kit for fastly develop ğŸï¸  with Symfony
                or for launch your Saas project ğŸš€'|trans }}
            </p>
            <a href="https://docs.fastfony.com" target="_blank" class="btn btn-primary">
                {{ 'Get Started'|trans }}
            </a>
        </div>
    </div>
</div>

<div class="w-full flex flex-col lg:flex-row gap-16 my-16">
    <div class="flex-grow-1">
        <h2 class="text-2xl font-semibold my-8 text-primary">
            {{ 'What you can build with Fastfony'|trans }}
        </h2>
        <ul class="list bg-base-100 rounded-box shadow-md">

            <li class="p-4 pb-2 text-sm opacity-60 tracking-wide">
                {{ 'Just few use cases... but you have the power!'|trans }}
            </li>

            {% if collections['use-cases'] is defined %}
                {% for use_case in collections['use-cases'] %}
                    <li class="list-row">
                        <i class="{{ use_case.presentableArrayFields['icon'] }} text-4xl"></i>
                        <h3 class="text-2xl font-semibold">
                            {{ use_case.presentableArrayFields['title'] }}
                            {% if use_case.presentableArrayFields['pro'] %}
                                <div class="ms-2 badge badge-dash badge-warning badge-sm">PRO</div>
                            {% endif %}
                        </h3>
                        <p class="list-col-wrap">
                            {{ use_case.presentableArrayFields['description'] }}
                        </p>
                    </li>
                {% endfor %}
            {% endif %}

        </ul>
    </div>

    <div class="flex-grow-0">
        <h2 class="text-2xl font-semibold my-8 text-primary">
            {{ 'Features available and customizable'|trans }}
        </h2>
        <div class="join join-vertical bg-base-100 w-full">
            {% if collections['features'] is defined %}
                {% for feature in collections['features'] %}
                    <div class="collapse collapse-arrow join-item border-base-300 border">
                        <input type="radio" name="features-accordion" {% if loop.first %}checked="checked"{% endif %} />
                        <h3 class="collapse-title font-semibold text-xl">
                            <i class="{{ feature.presentableArrayFields['icon'] }} me-2"></i>
                            {{ feature.presentableArrayFields['title'] }}

                            {% if feature.presentableArrayFields['pro'] %}
                                <div class="ms-2 badge badge-dash badge-warning badge-sm">PRO</div>
                            {% endif %}
                        </h3>
                        <div class="collapse-content text-sm">{{ feature.presentableArrayFields['description'] }}</div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>
</div>
